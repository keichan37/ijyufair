block var
doctype html
html(lang="ja")
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title
      =metas.title
    meta(name="description", content=metas.description)
    meta(name="keywords", content=metas.keywords)
    meta(name="author", content="")
    include ../include/_meta

    block link
      link(rel='stylesheet', href="" + metas.image + "css/application.css")

    block head_script
      //- Global site tag (gtag.js) - Google Analytics
      script(async src="https://www.googletagmanager.com/gtag/js?id=G-D7EXNN7V03")
      script.
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-D7EXNN7V03');
      script(type="text/javascript" src="//webfont.fontplus.jp/accessor/script/fontplus.js?55gB3urzk3w%3D&box=ayuzSDr3dNM%3D&aa=1&ab=2" charset="utf-8")

    meta(name="theme-color" content="#ffffff")
    include ../include/_favicon

  body#body
    block body
    block body_script
      script(src="/js/app.js")
      script(type="text/javascript" src="https://unpkg.com/feather-icons" charset="utf-8")
      script
        | feather.replace()
