extends ../include/_layout
block var
  - metas = {}
  - metas.title = '宮城しごとドラフト | '+ title
  - metas.image = '../'
  - page = 'draft'
block body
  .article
    include ../include/_header
    include ../include/_breadcrumb
    article.article__body
      b
        i(data-feather="map-pin")
        !=municipality
      h1
        span!=title
      img.article__body__cover(src="../../images/draft/" + category + "a.jpg")
      h2
        span!=subtitle1
      p!=body1
      img(src="../../images/draft/" + category + "b.jpg")
      h2
        span!=subtitle2
      p!=body2
      img(src="../../images/draft/" + category + "c.jpg")
      h2
        span!=subtitle3
      p.last-child
        !=body3
        br
        a(href=link) #{municipality}に移住相談をする
      a.article__button(href="javascript:void(0);") しごとドラフトに参加する
      table.article__table
        tbody
          tr
            th(colspan="2") 案件名
            td!=td1
          tr
            th(colspan="2") 勤務地
            td!=td2
          tr
            th(rowspan="3") 求人概要
            th 募集職種
            td!=td3
          tr
            th 業務内容
            td!=td4
          tr
            th 募集要件
            td!=td5
          tr
            th(colspan="2") 条件
            td!=td6
          tr
            th(colspan="2") その他
            td!=td7
      .article__link
        a(href="/draft/" + nextlink + ".html")
          | 次の求人を見る
          i(data-feather="arrow-right-circle")
    include ../include/_footer
